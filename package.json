{
  "name": "reatom",
  "private": true,
  "description": "Expressive and deterministic state manager",
  "scripts": {
    "release": "npx tsx ./tools/publish.ts",
    "postinstall": "turbo run build --filter=core --filter=framework --filter=testing",
    "build": "turbo run build",
    "reset": "./reset.sh",
    "test": "turbo run build --filter=testing && turbo run test",
    "prettify": "prettier --write **/*.{js,ts,md}",
    "prettify:watch": "onchange **/*.{js,ts,md} -- prettier --write {{changed}}",
    "package-generator": "tsx tools/new-package.ts",
    "update": "npx npm-check-updates -u",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": "artalar",
  "license": "MIT",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/artalar/reatom.git"
  },
  "engines": {
    "npm": ">=8.0.0"
  },
  "bugs": {
    "url": "https://github.com/artalar/reatom/issues"
  },
  "homepage": "https://github.com/artalar/reatom/tree/v2",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@cookie-baker/core": "^0.2.1",
    "@types/node": "latest",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.2.11",
    "@types/react-dom": "^18.2.4",
    "@types/use-sync-external-store": "^0.0.3",
    "@vitejs/plugin-react": "^4.0.0",
    "cross-fetch": "^3.1.6",
    "history": "^5.3.0",
    "husky": "^8.0.3",
    "lit": "^2.7.5",
    "microbundle": "^0.15.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "svelte": "^3.59.1",
    "tsx": "^3.12.7",
    "turbo": "^1.10.3",
    "typescript": "^5.1.3",
    "use-sync-external-store": "^1.2.0",
    "uvu": "^0.5.6",
    "vite": "^4.3.9",
    "zx": "^7.2.2"
  },
  "peerDependencies": {
    "prettier": "*"
  },
  "keywords": [
    "state",
    "store",
    "state-manager",
    "state manager",
    "reactive",
    "reactivity",
    "flux",
    "atom",
    "reatom",
    "@reatom"
  ]
}
