{
  "name": "@reatom/core",
  "private": false,
  "version": "3.0.0",
  "description": "State manager for both simple and complex applications",
  "source": "src/index.ts",
  "exports": {
    "require": "./build/index.js",
    "default": "./build/index.module.js"
  },
  "main": "build/index.js",
  "module": "build/index.module.js",
  "unpkg": "build/index.umd.js",
  "types": "build/index.d.ts",
  "sideEffects": false,
  "browserslist": [
    "last 4 chrome versions"
  ],
  "scripts": {
    "prepublishOnly": "npm run rebuild && npm run test",
    "build": "cross-env fixme=fixme microbundle",
    "clean": "rimraf build/",
    "rebuild": "npm run clean && npm run build",
    "test": "nx test:native @reatom/core",
    "test:native": "cross-env fixme=fixme tsx src/atom.test.ts",
    "bench": "cross-env fixme=fixme tsx src/index.bench.test.ts",
    "prettify": "cross-env fixme=fixme prettier --write '**/*.{js,ts,md}'",
    "prettify:watch": "cross-env fixme=fixme onchange '**/*.{js,ts,md}' -- prettier --write {{changed}}",
    "ts-check": "tsc --noEmit",
    "ts-check:watch": "npm run ts-check -- --watch",
    "update": "npx npm-check-updates -u"
  },
  "author": "artalar",
  "license": "MIT",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/artalar/reatom.git"
  },
  "bugs": {
    "url": "https://github.com/artalar/reatom/issues"
  },
  "homepage": "https://github.com/artalar/reatom",
  "keywords": [
    "state",
    "store",
    "flux",
    "atom",
    "reactive",
    "reactivity",
    "state-manager",
    "reatom"
  ],
  "files": [
    "/README.md",
    "/package.json",
    "/src",
    "/primitives",
    "/build"
  ]
}
